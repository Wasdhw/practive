<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenbackground"
    android:backgroundTint="#A8D8B8"
    android:backgroundTintMode="multiply"
    android:paddingStart="20sp"
    tools:context=".MainActivity"
    tools:ignore="RtlSymmetry">


    <ImageView
        android:id="@+id/sdsc"
        android:layout_width="380dp"
        android:layout_height="281dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/nyahalo" />

    <EditText
        android:id="@+id/username"
        android:layout_width="270dp"
        android:layout_height="49dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/wborder"
        android:drawableStart="@drawable/user"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="sans-serif-thin"
        android:hint="@string/username"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:textColor="@color/white"
        android:textColorHint="#9EFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sdsc"
        app:layout_constraintVertical_bias="0.639" />

    <EditText
        android:id="@+id/passcode"
        android:layout_width="270dp"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:autofillHints="password"
        android:background="@drawable/wborder"
        android:drawableStart="@drawable/security"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="sans-serif-thin"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#9EFFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintVertical_bias="0.075"
        app:passwordToggleEnabled="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#2C3E50"
        android:focusable="true"
        android:text="@string/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintVertical_bias="0.557" />

    <TextView
        android:id="@+id/Regis"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:contentDescription="@string/todo3"
        android:fontFamily="sans-serif-medium"
        android:scrollbarSize="10dp"
        android:text="@string/register_account"
        android:textColor="#E9E9EB"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.224"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/admin"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginBottom="26dp"
        android:clickable="true"
        android:contentDescription="@string/todo4"
        android:focusable="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/baseline_admin_panel_settings_24"
        tools:ignore="DuplicateSpeakableTextCheck,ImageContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>