<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenbackground"
    android:backgroundTint="#A8D8B8"
    android:backgroundTintMode="multiply"
    tools:context=".admin.insertbooks">

    <ImageView
        android:id="@+id/adsavio6"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/nyahalo" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="350dp"
        android:layout_height="530dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rectangle"
        android:scaleType="fitCenter"
        android:src="@drawable/rectangle"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editBookTitle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="264dp"
        android:ems="10"
        android:hint="@string/title"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/editphoto"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editBookAuthor"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/author2"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/editBookTitle"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editBookPublish"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/publish_date"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/editBookAuthor"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/bookDesc1"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:gravity="start|top"
        android:ems="10"
        android:textSize="14sp"
        android:hint="@string/description"
        android:inputType="textMultiLine"
        android:scrollHorizontally="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/editBookPublish"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlSymmetry,SmallSp" />

    <EditText
        android:id="@+id/totalCopies1"
        android:layout_width="65dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:hint="Stock"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/editBookPublish"
        app:layout_constraintVertical_bias="0.896" />



    <ImageView
        android:id="@+id/editphoto"
        android:layout_width="221dp"
        android:layout_height="151dp"
        android:clickable="true"
        android:contentDescription="@string/book_image"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_gallery"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.105" />

    <ImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="239dp"
        app:layout_constraintBottom_toBottomOf="@+id/adsavio6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/adsavio6"
        app:layout_constraintVertical_bias="0.804"
        app:srcCompat="@android:drawable/btn_dialog" />


</androidx.constraintlayout.widget.ConstraintLayout>